%h3 KEGIATAN PENELITIAN/PENGABDIAN

%table.table.table-bordered.table-hover
  %thead
    %tr
      %th.span1 No.
      %th= ResearchServiceActivity.human_attribute_name :id
      %th= ResearchServiceActivity.human_attribute_name :program_id
      %th= ResearchServiceActivity.human_attribute_name :year_stage_caption
      %th= ResearchServiceActivity.human_attribute_name :status_id
      %th= ResearchServiceActivity.human_attribute_name :type_id
      %th= ResearchServiceActivity.human_attribute_name :title
      %th= ResearchServiceActivity.human_attribute_name :lecturer_id
      %th= ResearchServiceActivity.human_attribute_name :updated_at
      %th Aksi
  %tbody
    - @research_service_activities.each_with_index do |research_service_activity, index| 
      %tr
        %td.center= index+1
        %td.center= hash_id research_service_activity
        %td.center= research_service_activity.program_title
        %td.center= research_service_activity.year_stage_caption
        %td.center= research_service_activity.status_caption
        %td.center= research_service_activity.type_caption
        %td.center= research_service_activity.title
        %td.center= research_service_activity.lecturer.code_and_name
        %td.center= datetime_to_string research_service_activity.updated_at, :long
        %td.center
          = link_to administrator_research_service_activity_path(research_service_activity), class: 'btn' do
            %i.icon-folder-open

